<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_informacion"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.jose.museonacionaldelosferrocarrilesmexicanos.Informacion"
    android:background="@android:color/white">

    <ExpandableListView
        android:id="@+id/ELV"
        android:layout_width="match_parent"
        percent:layout_heightPercent="90%"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        percent:layout_widthPercent="20%"
        android:layout_height="wrap_content"
        percent:srcCompat="?attr/actionModeCloseDrawable"
        android:layout_alignParentTop="true"
        android:id="@+id/imageButton"
        android:tint="@android:color/black"
        android:layout_above="@+id/ELV"
        android:onClick="regresar"
        android:background="@android:color/white" />

    <TextView
        android:text="Regresar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/ELV"
        android:layout_toRightOf="@+id/imageButton"
        android:layout_toEndOf="@+id/imageButton"
        android:layout_marginBottom="17dp"
        android:id="@+id/textView3"
        android:textColor="@android:color/black" />

</android.support.percent.PercentRelativeLayout>
