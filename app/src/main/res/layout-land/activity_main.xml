<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jose.museonacionaldelosferrocarrilesmexicanos.MainActivity"
    android:background="@android:color/black">

    <ViewFlipper
        android:id="@+id/vf1"
        percent:layout_widthPercent="40%"
        percent:layout_heightPercent="50%"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            percent:srcCompat="@drawable/ferrocarril"
            android:id="@+id/imageView"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            percent:srcCompat="@drawable/estacionesferrocarriles"
            android:id="@+id/imageView2"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            percent:srcCompat="@drawable/fair"
            android:id="@+id/imageView3"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            percent:srcCompat="@drawable/trenmmm"
            android:id="@+id/imageView4"
            />
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            percent:srcCompat="@drawable/ferrocarril2"
            android:id="@+id/imageView5"
            />
    </ViewFlipper>

    <ImageView
        percent:layout_widthPercent="20%"
        percent:layout_heightPercent="20%"
        percent:srcCompat="@drawable/logomuseo"
        android:id="@+id/imageView6"
        android:tint="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="32dp" />

    <Button
        android:text="Eventos y Cursos"
        percent:layout_widthPercent="30%"
        percent:layout_heightPercent="10%"
        android:id="@+id/button5"
        android:background="@drawable/boton"
        android:textSize="10sp"
        android:textAllCaps="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vf1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Buscar con codigo QR"
        percent:layout_widthPercent="40%"
        percent:layout_heightPercent="10%"
        android:id="@+id/button2"
        android:background="@drawable/boton"
        android:textSize="10sp"
        android:textAllCaps="false"
        android:layout_below="@+id/button5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Recorrido Guiado"
        percent:layout_widthPercent="25%"
        percent:layout_heightPercent="10%"
        android:id="@+id/button"
        android:background="@drawable/boton"
        android:textSize="10sp"
        android:textAllCaps="false"
        android:layout_below="@+id/button2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Configuracion"
        percent:layout_widthPercent="23%"
        percent:layout_heightPercent="10%"
        android:id="@+id/button3"
        android:background="@drawable/boton"
        android:textSize="10sp"
        android:textAllCaps="false"
        android:layout_below="@+id/button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="MNFM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        android:layout_alignWithParentIfMissing="false"
        android:layout_below="@+id/imageView6"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button" />

    <Button
        android:text="Informacion"
        percent:layout_widthPercent="20%"
        percent:layout_heightPercent="10%"
        android:id="@+id/button4"
        android:background="@drawable/boton"
        android:textSize="10sp"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="info" />
</android.support.percent.PercentRelativeLayout>
